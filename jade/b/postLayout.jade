extends ../defaultLayout.jade

block header
  block defs
  meta(name="description", content=description)
  title= pageTitle + " | Steven Enamakel"
  style
    include ../../css/build/blog-post.css

block content
  article
    h1#a-title= pageTitle
    #a-content.font-text
      p.description= description
      #a-meta.font-text= date
      block article-content


mixin photo(src, pageTitle)
  .text-center
    img(src= src)
    b
      div= pageTitle